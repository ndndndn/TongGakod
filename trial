red='\e[31m'
green='\e[32m'
NC='\e[0m'
echo -e "\e[36m------------------------------------------\e[0m"
MYIP=$(wget -qO- ipv4.icanhazip.com)
passrandom=$(cat /dev/urandom | tr -dc '0-9' | fold -w 6 | head -n 1)

username=TRIAL
egrep "^$username" /etc/passwd >/dev/null
if [ $? -eq 0 ]; then
# proses mengganti password
